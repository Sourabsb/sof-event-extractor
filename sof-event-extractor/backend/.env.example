# Environment Configuration Template
# Copy this file to .env and fill in your actual values

# OpenAI API Configuration
OPENAI_API_KEY=your_openai_api_key_here

# Azure Cognitive Services (Optional - for advanced OCR)
AZURE_COGNITIVE_KEY=your_azure_cognitive_services_key
AZURE_COGNITIVE_ENDPOINT=https://your-region.cognitiveservices.azure.com/

# Azure Storage (Optional - for cloud storage)
AZURE_STORAGE_CONNECTION_STRING=your_azure_storage_connection_string

# Application Configuration
DEBUG=true
LOG_LEVEL=INFO

# CORS Origins (for production deployment)
CORS_ORIGINS=http://localhost:3000,https://your-domain.com

# File Upload Configuration
MAX_FILE_SIZE=10485760  # 10MB in bytes
UPLOAD_DIR=uploads
RESULTS_DIR=results

# Processing Configuration
MAX_CONCURRENT_JOBS=10
JOB_TIMEOUT=300  # 5 minutes in seconds

# Database Configuration (if using database instead of in-memory storage)
# DATABASE_URL=postgresql://user:password@localhost/sof_extractor

# Security (for production)
# SECRET_KEY=your-secret-key-for-jwt-or-sessions
# JWT_ALGORITHM=HS256
# ACCESS_TOKEN_EXPIRE_MINUTES=30
